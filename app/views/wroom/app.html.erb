<div id="projects-panel" class="panel">
  <div class='panel-element' id='wroom-logo'>
    <div>
      <span id='wroom'>WROOM</span><span id='ai'>.ai</span>
    </div>
  </div>
  <div class='panel-element' id='new_project'>
    <%= turbo_frame_tag "new_project_frame", src: new_frame_projects_path %>
  </div>
  <div class='panel-element' id='projects'>
    <%= turbo_frame_tag "projects_frame", src: projects_frame_projects_path %>
  </div>
  <div class='panel-element' id='navigation'>
    <%= button_to "Library", projects_path, class: 'library-link', method: :get %>
    <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: 'sign-out' %>
  </div>
</div>
<% if @project %>
  <div id="project-panel" class="panel">
      <%= turbo_frame_tag "edit_project_frame", src: edit_frame_project_path(@project) %>
  </div>
  <div id="conversation-panel" class="panel">
    <% if @project.conversation %>
      <%= turbo_frame_tag "conversation_frame", src: show_in_frame_conversation_path(@project.conversation) %>
    <% end %>
  </div>
  <div id="context-panel" class="panel">
    <% if @project.conversation %>
      <%= turbo_frame_tag "edit_conversation_frame", src: edit_frame_conversation_path(@project.conversation) %>
    <% end %>
  </div>
<% else %>
  <div id='no-docs-panel' class='panel'>
    <div class='message'>
      <%= @message %>
    </div>
    <%= simple_format(@haiku) %>
  </div>
<% end %>
