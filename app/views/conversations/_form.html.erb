<div class='record-form'>
  <%= form_with(model: conversation) do |form| %>
    <% if conversation.errors.any? %>
      <div class='validation'>
        <div class='message'>
          <%= pluralize(conversation.errors.count, "error") %> prohibited this conversation from being saved:
        </div>
        <div class='errors'>
          <% conversation.errors.each do |error| %>
            <div class='error'><span class='bullet'>â€¢ </span><%= error.full_message %></div>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class='field'>
      <%= form.label :title, style: "display: block" %>
      <%= form.text_field :title, disabled: conversation.documents.any? %>
    </div>
    <% if current_user.admin? %>
      <div class='field'>
        <%= form.label :user_id, style: "display: block" %>
        <%= form.collection_select :user_id, User.all, :id, :email, { selected: action_name == 'new' ? current_user.id : conversation.user_id },  disabled: conversation.documents.any? %>
      </div>
    <% else %>
      <div class='field' style='display: none;'>
        <%= form.label :user_id, style: "display: block" %>
        <%= form.text_field :user_id, value: current_user.id, readonly: cannot?(:manage, User) %>
      </div>
    <% end %>
    <% if current_user.sources.any? %>
      <div class='checkbox-field'>
        <%= form.label 'Reference material:', style: "display: block" %>
        <%= form.collection_check_boxes :source_ids, current_user.sources, :id, :name, { hide_label: true } do |item| %>
          <div class='item'>
          <%= item.check_box %>
            <%= item.label %>
          </div>
        <% end %>
      </div>
    <% end %>
    <% if current_user.voices.any? %>
      <div class='checkbox-field'>
        <%= form.label 'Voices:', style: "display: block" %>
        <%= form.collection_check_boxes :voice_ids, current_user.voices, :id, :name, { hide_label: true } do |item| %>
          <div class='item'>
            <%= item.check_box %>
            <%= item.label %>
          </div>
        <% end %>
      </div>
    <% end %>
    <div class='actions'>
      <%= form.submit %>
    </div>
  <% end %>
</div>
