<div id='mini-sidebar'>
  <%= link_to dashboard_path, class: 'logo-link' do %>
    <%= show_svg('logo.svg') %>
  <% end %>
  <div class='mana-counter'>
    <div class='mana-limit-bar'>
      <% if current_user.gpt_budget_available > 0 %>
        <div class='mana-filled' style="width: <%= current_user.percentage_gpt_fees_available %>%;"></div>
      <% end %>
    </div>
    <i class="fa-solid fa-fire fa-fw fa-lg"></i>
  </div>
  <div class='bottom-buttons'>
    <%= link_to 'https://discord.gg/hf7zzNyJuD', target: :_blank do %>
      <i class="fa-solid fa-circle-question fa-fw fa-lg"></i>
    <% end %>
    <%= link_to edit_user_registration_path, data: { turbo_action: 'replace', turbo_frame: 'view_content' }, class: 'settings-link' do %>
      <i class="fa-solid fa-cog fa-fw fa-lg"></i>
    <% end %>
    <i id="toggle-icon" class="fa-solid fa-chevron-right fa-fw" onclick="toggleSidebar()"></i>
  </div>
</div>