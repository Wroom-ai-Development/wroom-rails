<p style="color: green"><%= notice %></p>

<h1>Documents</h1>

<%= link_to "New document", new_document_path %>

<div id="documents">
  <% @documents.each do |document| %>
    <% if can? :read, document %>
      <p>
        <%= link_to document.title, document %>
        <%= button_to "Destroy", document, method: :delete %>
      </p>
    <% end %>
  <% end %>
</div>
