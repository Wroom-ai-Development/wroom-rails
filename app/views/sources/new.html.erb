<%= turbo_frame_tag 'view_content' do %>
  <div id="record-form-view">
    <div id="record-form-box" class="new-source">
      <div id="header">
        <h3>Upload document</h3>
        <%= link_to "❌", explorer_folder_path(@folder_id || @source.folder_id || current_user.root_folder.id ) %>
      </div>
      <%= render "form", source: @source, folder_id: @folder_id %>
    </div>
  </div>
<% end %>
