<div id='view-header'>
  <h1>Voices</h1>
    <%= link_to "new", new_voice_path %>
</div>
<div id='view-content'>
  <div id="index-list">
    <% if current_user.admin? %>
      <div id='index-separator'>My voices</div id='index-separator'>
    <% end %>
    <% current_user.voices.each do |voice| %>
      <% if can? :manage, voice %>
        <div id='index-list-item'>
          <%= link_to voice.name, edit_voice_path(voice) %>
          <%= button_to "␡", voice, method: :delete %>
        </div>
      <% end %>
    <% end %>
  </div>
  <% if current_user.admin? %>
    <div id="index-list">
      <% @users.each do |user| %>
        <div id='index-separator'><%= user.email %></div id='index-separator'>
        <% user.voices.each do |voice| %>
          <div id='index-list-item'>
            <%= link_to voice.name, edit_voice_path(voice) %>
            <%= button_to "␡", voice, method: :delete %>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
