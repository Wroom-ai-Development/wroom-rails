<%= turbo_frame_tag "view_content" do %>
  <div class="header">
    <span>Trash</span>
  </div>
  <div class="recycle-bin">
    <table class="folder-contents-table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Created</th>
          <th>Last accessed</th>
          <th>Type</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @folders.each do |folder| %>
          <tr>
            <td>
              <i class="fa fa-folder fa-fw" style='margin-right: 0.2rem'></i><%= folder.name %>
            </td>
            <td><%= folder.created_at.strftime("%b %d, %Y %H:%M") %></td>
            <td><%= folder.updated_at.strftime("%b %d, %Y %H:%M") %></td>
            <td>
              Folder
            </td>
            <td>
              <%= link_to "Restore", undiscard_folder_path(folder), data: { turbo_frame: '_top' } %>
            </td>
          </tr>
        <% end %>
        <% @documents.each do |document| %>
          <tr>
            <td>
              <% if document.source_based %>
                <i class="fa fa-file-text-o fa-fw" aria-hidden="true"></i>
              <% else %>
                <i class="fa fa-book fa-fw" aria-hidden="true"></i>
              <% end %>
              <%= document.title %>
            </td>
            <td><%= document.created_at.strftime("%b %d, %Y %H:%M") %></td>
            <td><%= document.updated_at.strftime("%b %d, %Y %H:%M") %></td>
            <td>
              <%= document.source_based ? "Source" : "Document" %>
            </td>
            <td>
              <%= link_to "Restore", undiscard_document_path(document), data: { turbo_frame: '_top' } %>
            </td>
          </tr>
        <% end %>
        <% @voices.each do |voice| %>
          <tr>
            <td>
              <span class='icon'>ðŸ‘¤ </span><%= voice.name %>
            </td>
            <td><%= voice.created_at.strftime("%b %d, %Y %H:%M") %></td>
            <td><%= voice.updated_at.strftime("%b %d, %Y %H:%M") %></td>
            <td>
              voice
            </td>
            <td>
              <%= link_to "Restore", undiscard_voice_path(voice), data: { turbo_frame: '_top' } %>
            </td>
          </tr>
        <% end %>
    </table>
  </div>
<% end %>