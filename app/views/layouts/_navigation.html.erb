<header>
  <div id='logo'>
    <span id='wroom'>WROOM</span><span id='ai'>.ai</span>
  </div>
  <nav>
    <% if can? :manage, User %>
      <div class="link-wrapper">
        <%= link_to "Users", users_path %>
      </div>
    <% end %>
    <% if can? :manage, Document %>
      <div class="link-wrapper">
        <%= link_to "Documents", documents_path %>
      </div>
    <% end %>
    <% if can? :manage, Conversation %>
      <div class="link-wrapper">
        <%= link_to "Conversations", conversations_path %>
      </div>
    <% end %>
    <% if current_user %>
      <%= button_to "Sign out", destroy_user_session_path, method: :delete %>
    <% end %>
  </nav>
</header>
