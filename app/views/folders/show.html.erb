<p style="color: green"><%= notice %></p>
<h1><%= @folder.name %></h1>
  <% unless @folder.type == 'RootFolder' %>
    <%= link_to "Edit this folder", edit_folder_path(@folder) %> |
    <%= link_to "Back to parent", folder_path(@folder.parent) %>
  <% end %>

  <%#= button_to "Destroy this folder", @folder, method: :delete %>
  <%= link_to "New folder", new_folder_path(parent_id: @folder.id) %>
  <% @folder.children.each do |folder| %>
    <p>
      <%= link_to folder.name, folder %>
    </p>
  <% end %>

</div>
