<div class="record-form">
  <%= form_with(model: document) do |form| %>
    <% if document.errors.any? %>
      <div class='validation'>
        <div class='message'>
          <%= pluralize(document.errors.count, "error") %> prohibited this document from being saved:
        </div>
        <div class='errors'>
          <% document.errors.each do |error| %>
            <div class='error'><span class='bullet'>â€¢ </span><%= error.full_message %></div>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class='field'>
      <%= form.label :title, style: "display: block" %>
      <%= form.text_field :title, { onchange: action_name == 'new' ? '' : 'this.form.submit()' } %>
    </div>

    <% if action_name == 'new' %>
      <% if current_user.admin? %>
        <div class='field'>
          <%= form.label :user_id, style: "display: block" %>
          <%= form.collection_select :user_id, User.all, :id, :email, { selected: current_user.id, readonly: true } %>
        </div>
      <% else %>
        <div class='field' style='display: none;'>
          <%= form.label :user_id, style: "display: block" %>
          <%= form.text_field :user_id, value: current_user.id, readonly: cannot?(:manage, User) %>
        </div>
      <% end %>
      <div class='field' style=>
        <%= form.submit %>
      </div>
    <% else %>
      <div class='field content'>
        <%= form.text_field :content, { onchange: 'this.form.submit()' }  %>
      </div>
    <% end %>

  <% end %>
</div>
