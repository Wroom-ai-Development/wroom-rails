<script>
  function toggleLeftPanel() {
    console.log("yay")
    const panel = document.getElementById('documents-panel')
    const button = document.getElementById('collapse-button')
    if (panel.style.display == 'none') {
      panel.style.display = 'flex'
      button.innerHTML = '⬅️'
    } else {
      panel.style.display = 'none'
      button.innerHTML = '➡️'
    }
  }
</script>
<div id="collapse-button" onClick=toggleLeftPanel()>
  ⬅️
</div>
<div id="documents-panel" class="panel">
  <div id='wroom-logo'>
    <div>
      <span id='wroom'>WR<span class='oo'>OO</span>M</span>
    </div>
  </div>
  <div id="documents">
    <div id='navigation'>
      <% library_path = @document ? explorer_folder_path(@document.folder) : explorer_folder_path(current_user.root_folder) %>
      <%= button_to "Dashboard", library_path, class: 'library-link', method: :get %>
    </div>
    <%= render 'tree_folder', folder: current_user.root_folder %>
  </div>
</div>
<%= turbo_frame_tag "document_editor", src: editor_document_path(@document) %>

