<%= turbo_frame_tag "new_voice_modal" do %>
  <div class="modal" style="display: none;" id="new-voice-modal">
    <%= form_with(
      model: @voice,
      url: create_from_modal_voices_url
    ) do |form| %>

      <div>
        <%= link_to "Cancel", "#", data: {
          controller: 'modals',
          action: 'modals#close'
        }, class: 'cancel-button' %>
      </div>

      <%= form.label :name, style: "display: block" %>
      <%= form.text_field :name %>

      <%= form.label :user_id, style: "display: none" %>
      <%= form.text_field :user_id, value: current_user.id, readonly: cannot?(:manage, User) %>

      <%= form.label :meta_prompt, style: "display: block" %>
      <%= form.text_area :meta_prompt %>

      <%= form.submit 'confirm' %>
    <% end %>
  </div>
<% end %>
