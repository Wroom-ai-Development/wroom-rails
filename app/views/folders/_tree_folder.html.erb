<div class='tree-folder' id="<%= "tree-folder-#{folder.id}" %>">
  <%= link_to folder_path(folder), data: { turbo_frame: 'view_content' } do %>
    <div class="folder" onClick=<%= "displayChildren('tree-folder-#{folder.id}')" %>>
      <span class='icon'>📁</span><span class='folder-name'><%= folder.type == 'RootFolder' ? 'My Files' : folder.name %></span>
    </div>
  <% end %>
  <div class="children" style="display: none;">
    <% folder.children.kept.each do |folder| %>
      <%= render 'folders/tree_folder', folder: folder %>
    <% end %>
  </div>
</div>
