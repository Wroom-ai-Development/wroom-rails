<p style="color: green"><%= notice %></p>

<h1>Documents</h1>

<div id="documents">
  <% @documents.each do |document| %>
    <% if can? :read, document %>
      <%= render document %>
      <p>
        <%= link_to "Show this document", document %>
      </p>
    <% end %>
  <% end %>
</div>

<%= link_to "New document", new_document_path %>
