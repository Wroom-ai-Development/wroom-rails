<div id="<%= dom_id document %>">
  <p>
    <strong>Title:</strong>
    <%= document.title %>
  </p>

  <p>
    <strong>Notes:</strong>
    <%= document.notes %>
  </p>

  <p>
    <strong>Author:</strong>
    <%= document.author %>
  </p>

  <p>
    <strong>Year published:</strong>
    <%= document.year_published %>
  </p>

  <p>
    <strong>File:</strong>
    <% if document.file.attached? %>
      <%= link_to document.file.filename, rails_blob_path(document.file, disposition: 'attachment') %>
    <% else %>
      None attached
    <% end %>
  </p>

  <p>
    <strong>User:</strong>
    <%= document.user_id %>
  </p>

</div>
