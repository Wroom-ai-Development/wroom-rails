<div class="record-form">
  <%= form_with(
    model: project
  ) do |form| %>
    <% if project.errors.any? %>
      <div class='validation'>
        <div class='message'>
          <%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:
        </div>
        <div class='errors'>
          <% project.errors.each do |error| %>
            <div class='error'><span class='bullet'>â€¢ </span><%= error.full_message %></div>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class='field'>
      <%= form.label :title, style: "display: block" %>
      <%= form.text_field :title, { onchange: action_name == 'new' ? '' : 'this.form.submit()' } %>
    </div>
    <div class='field' style='display: none;'>
      <%= form.label :wroom_project_id %>
      <%= form.text_field :wroom_project_id, value: @wroom_project_id, readonly: cannot?(:manage, User) %>
    </div>
    <% if current_user.admin? %>
      <div class='field'>
        <%= form.label :user_id, style: "display: block" %>
        <%= form.collection_select :user_id, User.all, :id, :email, { selected: action_name == 'new' ? current_user.id : project.user_id , readonly: true } %>
      </div>
    <% else %>
      <div class='field' style='display: none;'>
        <%= form.label :user_id, style: "display: block" %>
        <%= form.text_field :user_id, value: current_user.id, readonly: cannot?(:manage, User) %>
      </div>
    <% end %>
    <div class='field'>
      <%= form.submit %>
    </div>

  <% end %>
</div>
