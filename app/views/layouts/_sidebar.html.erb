  <div id='sidebar'>
    <div id='wroom-logo'>
      <div>
        <span id='wroom'>WROOM</span>
      </div>
    </div>
    <div id='folder-tree'>
      <%= render 'folders/tree_folder', folder: root_folder %>
      <% if current_user.anything_in_recycle_bin? %>
        <%= link_to recycle_bin_folders_path, data: { turbo_frame: 'view_content' }, class: 'trash-link'  do %>
          <span class='icon'>üóëÔ∏è </span>Trash
        <% end %>
      <% end %>
    </div>
    <% if can? :manage, User %>
      <div class="link-wrapper">
        <%= link_to "Monitoring", monitoring_path %>
      </div>
    <% end %>
    <% if can? :manage, Voice %>
      <div class="link-wrapper">
        <%= link_to "Voices", manager_voices_path %>
      </div>
    <% end %>
    <% if can? :manage, User %>
      <div class="link-wrapper">
        <%= link_to "GPT-4", toggle_gpt_4_user_path(current_user), class: "gpt-4-toggle #{current_user.gpt_4_enabled ? "on" : "off"}" %>
      </div>
    <% end %>
    <div id='account-links'>
      <p id='current-user'><%= current_user.email %></p>
