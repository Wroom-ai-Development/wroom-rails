<div id='view-header'>
  <h1>Documents</h1>
  <%= link_to "new", new_document_path %>
</div>
<div id='view-content'>
  <div id="index-list">
    <% if current_user.admin? %>
      <div id='index-separator'>My documents</div id='index-separator'>
    <% end %>
    <% current_user.documents.each do |document| %>
      <% if can? :manage, document %>
        <div id='index-list-item'>
          <%= link_to document.title.present? ? document.title : document.name, document %>
          <%= button_to "delete", document, method: :delete %>
        </div>
      <% end %>
    <% end %>
  </div>
  <% if current_user.admin? %>
    <div id="index-list">
      <% @users.each do |user| %>
        <div id='index-separator'><%= user.email %></div id='index-separator'>
        <% user.documents.each do |document| %>
          <div id='index-list-item'>
            <%= link_to document.name, document %>
            <%= button_to "delete", document, method: :delete %>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
