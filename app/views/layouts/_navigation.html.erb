<header>
  <%= link_to root_path do %>
    <div id='left-aligned'>
      <span id='wroom'>WROOM</span>
      <p id='current-user'>Logged in as <%= current_user.email %></p>
    </div>
  <% end %>
  <nav>
    <% if can? :manage, User %>
      <div class="link-wrapper">
        <%= link_to "Monitoring", monitoring_path %>
      </div>
      <div class="link-wrapper">
        <%= link_to "Users", users_path %>
      </div>
    <% end %>
    <% if can? :manage, Source %>
      <div class="link-wrapper">
        <%= link_to "Sources", sources_path %>
      </div>
    <% end %>
    <% if can? :manage, Project %>
      <div class="link-wrapper">
        <%= link_to "Projects", projects_path %>
      </div>
    <% end %>
    <% if can? :manage, Voice %>
      <div class="link-wrapper">
        <%= link_to "Voices", voices_path %>
      </div>
    <% end %>
    <% if current_user %>
      <%= button_to "Sign out", destroy_user_session_path, method: :delete %>
    <% end %>
  </nav>
</header>
