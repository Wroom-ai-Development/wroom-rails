<div id="context-panel" class="panel">
  <div class='panel-element' id='wroom-logo'>
    <div>
      <span id='wroom'>WROOM</span>
    </div>
  </div>
    <% if @project %>
      <%= turbo_frame_tag "conversation_settings", src: settings_conversation_path(@project.conversation) %>
    <% end %>
  <div class='panel-element' id='navigation'>
    <%= button_to "Library", projects_path, class: 'library-link', method: :get %>
    <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: 'sign-out' %>
    <p id='current-user'>Logged in as <%= current_user.email %></p>
  </div>
</div>
<% if @project %>
  <div id="project-panel" class="panel">
      <%= turbo_frame_tag "project_editor", src: editor_project_path(@project) %>
  </div>
  <div id="conversation-panel" class="panel">
    <% if @project.conversation %>
      <%= turbo_frame_tag "conversation_frame", src: chat_conversation_path(@project.conversation) %>
    <% end %>
  </div>

<% else %>
  <div id='no-docs-panel' class='panel'>
    <div class='message'>
      <%= @message %>
    </div>
    <%= simple_format(@haiku) %>
  </div>
<% end %>
